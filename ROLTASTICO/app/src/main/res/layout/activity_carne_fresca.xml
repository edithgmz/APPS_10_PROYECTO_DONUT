<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="edith.example.carnefresca.CarneFresca">


    <include layout="@layout/activity_cf_fab"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menuCF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:menu_colorNormal="@color/colorAccent"
            app:menu_colorPressed="@color/colorAccent"
            app:menu_colorRipple="@color/cAcc3"
            app:menu_fab_size="normal"
            app:menu_icon="@drawable/dado">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/facil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:src="@drawable/dado"
                app:fab_colorNormal="@color/cAcc4"
                app:fab_colorPressed="@color/cAcc4"
                app:fab_colorRipple="@color/cAcc3"
                app:fab_label="Fácil"
                app:fab_size="normal" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/medio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:src="@drawable/dado"
                app:fab_colorNormal="@color/cAcc4"
                app:fab_colorPressed="@color/cAcc4"
                app:fab_colorRipple="@color/cAcc3"
                app:fab_label="Medio"
                app:fab_size="normal" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/dificil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:src="@drawable/dado"
                app:fab_colorNormal="@color/cAcc4"
                app:fab_colorPressed="@color/cAcc4"
                app:fab_colorRipple="@color/cAcc3"
                app:fab_label="Difícil"
                app:fab_size="normal" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/mDificil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:src="@drawable/dado"
                app:fab_colorNormal="@color/cAcc4"
                app:fab_colorPressed="@color/cAcc4"
                app:fab_colorRipple="@color/cAcc3"
                app:fab_label="Muy difícil"
                app:fab_size="normal" />


        </com.github.clans.fab.FloatingActionMenu>


    </RelativeLayout>

    <!--
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/dado" />
    -->



</android.support.design.widget.CoordinatorLayout>
